<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libraryinfo.presentation.userui.MyBookUiController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox alignment="CENTER_LEFT" maxWidth="2000">
        <MaterialIconView glyphName="ACCOUNT_BOX" glyphSize="28" />
        <Text text="现有书信息">
            <font>
                <Font size="20.0" />
            </font></Text>
        <padding>
            <Insets right="10.0" />
        </padding>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </HBox>
    <HBox fx:id="container" />
    <HBox alignment="CENTER_LEFT" maxHeight="60.0" maxWidth="2000.0" prefHeight="60.0" prefWidth="600.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
        </padding>
        <JFXButton buttonType="RAISED" onAction="#onBtnRefreshClicked" style="-fx-background-color: #424242; -fx-text-fill: #FFFFFF" text="刷新">
            <graphic>
                <MaterialIconView glyphName="ADD" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </JFXButton>
        <JFXButton buttonType="RAISED" onAction="#onBtnReturnClicked" style="-fx-background-color: #424242; -fx-text-fill: #FFFFFF" text="还书">
            <graphic>
                <MaterialIconView glyphName="ADD" glyphSize="24" glyphStyle="-fx-fill: #FFFFFF" />
            </graphic>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </JFXButton>
    </HBox>
</VBox>
